<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overview_fragment">
    <TextView
        android:id="@+id/ov_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Tổng quan"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/ov_bg_budgetCard"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Tháng 1, 2026"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_header"
        app:layout_constraintStart_toStartOf="@id/ov_bg_budgetCard"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/ov_bg_budgetCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/component_rounded_rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart ="5dp"
        android:layout_marginEnd ="5dp"
        android:layout_marginTop ="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/ov_monthlyBudget"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/ov_ic_budget"
        app:layout_constraintStart_toEndOf="@id/ov_ic_budget"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/ov_ic_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wallet"
        app:layout_constraintStart_toStartOf = "@id/ov_bg_budgetCard"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/ov_bg_budgetCard"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/ov_tv_spentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/ov_spentAmountText"
        android:textSize="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/ov_ic_budget"
        app:layout_constraintStart_toStartOf="@id/ov_ic_budget"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/ov_tv_spentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text = "8.000.000 đ"
        android:textSize="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/ov_ic_budget"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/ov_tv_totalBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Tổng ngân sách: 15.000.000 đ"
        android:textSize="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/ov_tv_spentLabel"
        app:layout_constraintStart_toStartOf="@id/ov_ic_budget"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/ov_tv_budgetPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text = "55%"
        android:textSize="16dp"
        android:textColor="#50F80D"
        app:layout_constraintTop_toTopOf="@id/ov_tv_spentAmount"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="60dp"
        />

    <ProgressBar
        android:id="@+id/ov_pb_budget"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:scaleY="3"
        android:max="100"
        android:progress="55"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_spentLabel"
        app:layout_constraintStart_toStartOf="@id/ov_tv_spentLabel"
        app:layout_constraintEnd_toEndOf="@id/ov_tv_spentAmount"
        android:layout_marginTop = "10dp"
        />
    <View
        android:id = "@+id/ov_view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/ov_pb_budget"
        app:layout_constraintEnd_toEndOf="@id/ov_pb_budget"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_budgetPercent"
        android:layout_marginTop="10dp"
        android:background="#000000"
        />
    <TextView
        android:id="@+id/ov_tv_remainingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Còn lại"
        android:textSize="20dp"
        android:textBold="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/ov_view_divider"
        app:layout_constraintStart_toStartOf="@id/ov_ic_budget"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ov_tv_remainingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text = "6.750.000 đ"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/ov_view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:id="@+id/ov_bg_uncategorizedCard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/component_rounded_rect"
        app:layout_constraintTop_toBottomOf="@id/ov_bg_budgetCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart ="5dp"
        android:layout_marginEnd ="5dp"
        android:layout_marginTop ="20dp"
        android:tint="#f7e4d8"
        />
    <ImageView
        android:id="@+id/ov_ic_uncategorized"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/ov_bg_uncategorizedCard"
        app:layout_constraintStart_toStartOf="@id/ov_bg_uncategorizedCard"
        android:layout_marginStart="10dp"
        android:layout_marginTop = "10dp"
        android:src="@drawable/ic_information"
        />
    <TextView
        android:id="@+id/ov_tv_uncategorizedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiêu chưa phân loại"
        android:textColor="#ed7a15"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/ov_ic_uncategorized"
        app:layout_constraintBottom_toBottomOf="@id/ov_ic_uncategorized"
        app:layout_constraintStart_toEndOf="@id/ov_ic_uncategorized"
        />

    <TextView
        android:id="@+id/ov_tv_uncategorizedDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có 450.000 ₫ cần được phân loại"
        android:textColor="#ed7a15"

        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_uncategorizedTitle"
        app:layout_constraintStart_toEndOf="@id/ov_ic_uncategorized"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/ov_bg_weeklyChartCard"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/component_rounded_rect"
        app:layout_constraintTop_toBottomOf="@id/ov_bg_uncategorizedCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart ="5dp"
        android:layout_marginEnd ="5dp"
        android:layout_marginTop ="20dp"

        />

    <ImageView
        android:id="@+id/ov_ic_weeklyChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wallet"
        app:layout_constraintStart_toStartOf = "@id/ov_bg_weeklyChartCard"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/ov_bg_weeklyChartCard"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Chi tiêu trong tuần"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/ov_ic_weeklyChart"
        app:layout_constraintStart_toEndOf="@id/ov_ic_weeklyChart"
        android:layout_marginStart="10dp"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/ov_chart_weekly"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_weeklyChart"
        app:layout_constraintStart_toStartOf="@id/ov_bg_weeklyChartCard"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_weeklyChartCard"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trung bình: 435.714 ₫/ngày"
        app:layout_constraintStart_toStartOf="@id/ov_chart_weekly"
        app:layout_constraintTop_toBottomOf="@id/ov_chart_weekly"
        app:layout_constraintEnd_toEndOf="@id/ov_chart_weekly"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:id="@+id/ov_bg_categoryChartCard"
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:src="@drawable/component_rounded_rect"
        app:layout_constraintTop_toBottomOf="@id/ov_bg_weeklyChartCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart ="5dp"
        android:layout_marginEnd ="5dp"
        android:layout_marginTop ="20dp"

        />
    <ImageView
        android:id="@+id/ov_ic_categoryChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wallet"
        app:layout_constraintStart_toStartOf = "@id/ov_bg_categoryChartCard"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/ov_bg_categoryChartCard"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Chi tiêu theo danh mục"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/ov_ic_categoryChart"
        app:layout_constraintStart_toEndOf="@id/ov_ic_categoryChart"
        android:layout_marginStart="10dp"
        />
<!--    barchart-->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/ov_chart_category"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_categoryChart"
        app:layout_constraintStart_toStartOf="@id/ov_bg_categoryChartCard"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:layout_marginTop="10dp"
       />
    <ImageView
        android:id="@+id/ov_ic_catFood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_chart_category"
        app:layout_constraintStart_toStartOf="@id/ov_ic_categoryChart"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id ="@+id/ov_tv_catFoodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catFood"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catFood"
        android:text="Ăn uống"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id ="@+id/ov_tv_catFoodAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catFood"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="2.500.000 đ"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id ="@+id/ov_tv_catFoodPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_catFoodAmount"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="30%"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <ProgressBar
        android:id="@+id/ov_pb_catFood"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"

        android:max="100"
        android:progress="30"
        app:layout_constraintTop_toTopOf="@id/ov_tv_catFoodPercent"
        app:layout_constraintStart_toStartOf="@id/ov_tv_catFoodLabel"
        app:layout_constraintEnd_toStartOf="@id/ov_tv_catFoodPercent"
        android:layout_marginTop = "5dp"
        android:layout_marginEnd = "10dp"
        />
    <ImageView
        android:id="@+id/ov_ic_catTransport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_catFood"
        app:layout_constraintStart_toStartOf="@id/ov_ic_catFood"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catTransportLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catTransport"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catTransport"
        android:text="Đi lại"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catTransportAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catTransport"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="1.200.000 đ"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catTransportPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_catTransportAmount"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="15%"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <ProgressBar
        android:id="@+id/ov_pb_catTransport"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="15"
        app:layout_constraintTop_toTopOf="@id/ov_tv_catTransportPercent"
        app:layout_constraintStart_toStartOf="@id/ov_tv_catTransportLabel"
        app:layout_constraintEnd_toStartOf="@id/ov_tv_catTransportPercent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />

    <!-- Sức khỏe -->
    <ImageView
        android:id="@+id/ov_ic_catHealth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_catTransport"
        app:layout_constraintStart_toStartOf="@id/ov_ic_catFood"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catHealthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catHealth"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catHealth"
        android:text="Sức khỏe"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catHealthAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/ov_ic_catHealth"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="800.000 đ"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catHealthPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_catHealthAmount"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="10%"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <ProgressBar
        android:id="@+id/ov_pb_catHealth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="10"
        app:layout_constraintTop_toTopOf="@id/ov_tv_catHealthPercent"
        app:layout_constraintStart_toStartOf="@id/ov_tv_catHealthLabel"
        app:layout_constraintEnd_toStartOf="@id/ov_tv_catHealthPercent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />

    <!-- Giáo dục -->
    <ImageView
        android:id="@+id/ov_ic_catEducation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_catHealth"
        app:layout_constraintStart_toStartOf="@id/ov_ic_catFood"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catEducationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catEducation"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catEducation"
        android:text="Giáo dục"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catEducationAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catEducation"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="1.500.000 đ"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catEducationPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_catEducationAmount"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="18%"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <ProgressBar
        android:id="@+id/ov_pb_catEducation"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="18"
        app:layout_constraintTop_toTopOf="@id/ov_tv_catEducationPercent"
        app:layout_constraintStart_toStartOf="@id/ov_tv_catEducationLabel"
        app:layout_constraintEnd_toStartOf="@id/ov_tv_catEducationPercent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />

    <!-- Gia đình -->
    <ImageView
        android:id="@+id/ov_ic_catFamily"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_catEducation"
        app:layout_constraintStart_toStartOf="@id/ov_ic_catFood"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catFamilyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catFamily"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catFamily"
        android:text="Gia đình"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catFamilyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catFamily"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="1.300.000 đ"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catFamilyPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ov_tv_catFamilyAmount"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="16%"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />
    <ProgressBar
        android:id="@+id/ov_pb_catFamily"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="16"
        app:layout_constraintTop_toTopOf="@id/ov_tv_catFamilyPercent"
        app:layout_constraintStart_toStartOf="@id/ov_tv_catFamilyLabel"
        app:layout_constraintEnd_toStartOf="@id/ov_tv_catFamilyPercent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        />

    <!-- Mua sắm -->
    <ImageView
        android:id="@+id/ov_ic_catShopping"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ov_ic_catFamily"
        app:layout_constraintStart_toStartOf="@id/ov_ic_catFood"
        android:src="@drawable/ic_wallet"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catShoppingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catShopping"
        app:layout_constraintStart_toEndOf="@id/ov_ic_catShopping"
        android:text="Mua sắm"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ov_tv_catShoppingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ov_ic_catShopping"
        app:layout_constraintEnd_toEndOf="@id/ov_bg_categoryChartCard"
        android:text="500.000 đ"
        android:layout_marginTop="5dp"
